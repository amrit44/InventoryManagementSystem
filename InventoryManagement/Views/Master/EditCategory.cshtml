@model InventoryManagement.Models.CategoryMaster
@{
    ViewBag.Title = "Category";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>
@using (Ajax.BeginForm("UpdateCategory", "Master", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "", OnSuccess = "Response" }))
{

    <div class="fa-heading" style="font-family:fantasy;">Update Category </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">

            </div>
            <div class="col-md-4">

            </div>
            <div class="col-md-4">
                <label>

                </label>


            </div>
        </div>
    </div>
    <hr />


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4" style="padding:1rem;">
                <label>Name </label>
                @Html.HiddenFor(x => x.Id)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)
                @Html.Hidden("Previousname", Model.Name)
            </div>
            <div class="col-md-4" style="padding:1rem;">
                <label>Description </label>
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })


            </div>
        </div>
        <div class="col-md-12">
            <div class="col-md-4" style="padding:1rem;">
                <label></label>
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>

        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function Response(res) {
            window.location.href = "../category";
        }
    </script>
}
