@model InventoryManagement.Models.CategoryMaster
@{
    ViewBag.Title = "Category";
}

<style>
    .field-validation-error {
        color: red;
    }
</style>
@using (Ajax.BeginForm("CreateCategory", "Master", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "", OnSuccess = "Response" }))
{

    <div class="fa-heading" style="font-family:fantasy;">Create Category </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4">

            </div>
            <div class="col-md-4">

            </div>
            <div class="col-md-4">
                <label>

                </label>


            </div>
        </div>
    </div>
    <hr />


    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4" style="padding:1rem;">
                <label>Name </label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Name)

            </div>
            <div class="col-md-4" style="padding:1rem;">
                <label>Discount </label>
                @Html.TextBoxFor(x => x.Discount, new { @class = "form-control" ,@type="number"})


            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-4" style="padding:2.5rem;">
                    <label>Description </label>
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control",@cols="20",@rows="2",@style="margin: 0px -426.672px 0px 0px; width: 817px; height: 53px;" })


                </div>
            </div>
           
        </div>
        <div class="col-md-12">
            <div class="col-md-4" style="padding:1rem;">
                <label></label>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </div>
    </div>

}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        function Response(res) {
            window.location.href = "./category";
        }
    </script>
}
